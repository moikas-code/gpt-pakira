{
  "name": "gpt3-web-assistant",
  "description": "GPT3 Desktop Assistant",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "author": {
    "name": "moikapy",
    "email": "moikapy@moikaslookout.com"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        ".",
        "styles/**",
        "pages/**",
        "public/**"
      ],
      "ignore": [
        "out",
        "node_modules",
        ".next"
      ],
      "extensions": [
        "js",
        "json",
        "lock",
        "tsx",
        "ts"
      ]
    }
  },
  "scripts": {
    "dev": "next dev",
    "build:win": "next build && next export && npm run prepare:win",
    "build": "next build && next export && npm run prepare:mac",
    "prepare:win": "mv ./out/_next out/assets && sed -i 's/\\/_next/\\/assets/g' ./out/**.html",
    "prepare:mac": "mv ./out/_next out/assets && sed -i '' 's/\\/_next/\\/assets/g' ./out/*.html",
    "watch": "npm-watch"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.2",
    "@next/font": "13.2.4",
    "@types/node": "18.15.10",
    "@types/react": "18.0.30",
    "@types/react-dom": "18.0.11",
    "axios": "^1.3.4",
    "axios-retry": "^3.4.0",
    "browserify-fs": "^1.0.0",
    "concurrently": "^7.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "gpt-3-encoder": "^1.1.4",
    "langchain": "^0.0.64",
    "next": "13.2.4",
    "next-auth": "^4.20.1",
    "npm-watch": "^0.11.0",
    "openai": "^3.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.6",
    "typescript": "5.0.2",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.0",
    "@electron-forge/maker-deb": "^6.1.0",
    "@electron-forge/maker-rpm": "^6.1.0",
    "@electron-forge/maker-squirrel": "^6.1.0",
    "@electron-forge/maker-zip": "^6.1.0",
    "@electron-forge/publisher-github": "^6.1.0",
    "electron": "^23.2.0",
    "eslint": "8.39.0",
    "eslint-config-next": "13.3.1",
    "next-transpile-modules": "^10.0.0",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2",
    "webpack-node-externals": "^3.0.0"
  }
}
